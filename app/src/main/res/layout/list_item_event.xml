<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/event_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/normal_margin"
        android:src="@drawable/ic_event_available_black_24dp"
        android:tint="@color/colorAccentAlternative" />

    <LinearLayout
        android:id="@+id/event_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/event_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event name"
            android:textColor="#444444"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14:00, 13 Oct 2018"
            android:textColor="#AAAAAA"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/event_icon"
        android:layout_alignStart="@id/event_info"
        android:background="#EEEEEE" />
</RelativeLayout>