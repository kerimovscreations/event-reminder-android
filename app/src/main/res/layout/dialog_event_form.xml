<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_event_form"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="@dimen/normal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Meeting"
        android:textColor="#444444"
        android:textSize="30sp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/dialog_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"
            android:textSize="18sp" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/dialog_event_date_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/dialog_event_date_ic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="@dimen/medium_margin"
                android:src="@drawable/ic_date_range_black_24dp"
                android:tint="@color/colorAccentAlternative" />

            <TextView
                android:id="@+id/dialog_event_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/dialog_event_date_ic"
                android:text="Select date"
                android:textColor="@color/colorAccentAlternative"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_event_duration_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_margin"
            android:layout_weight="2">

            <ImageView
                android:id="@+id/dialog_event_duration_ic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="@dimen/medium_margin"
                android:src="@drawable/ic_date_range_black_24dp"
                android:tint="@color/colorAccentAlternative" />

            <TextView
                android:id="@+id/dialog_event_duration_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/dialog_event_duration_ic"
                android:text="Duration"
                android:textColor="@color/colorAccentAlternative"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>


    <Button
        android:id="@+id/dialog_event_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:background="@drawable/btn_add_bg"
        android:text="Add"
        android:textColor="@color/colorWhite" />
</LinearLayout>